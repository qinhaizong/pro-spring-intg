<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/integration
    http://www.springframework.org/schema/integration/spring-integration-2.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="messagingTemplate" class="org.springframework.integration.core.MessagingTemplate">
        <property name="defaultChannel" ref="ticketChannel"/>
        <property name="receiveTimeout" value="1000"/>
    </bean>
    <bean class="com.apress.prospringintegration.channels.messagingtemplate.ProblemReporter">
        <property name="messagingTemplate" ref="messagingTemplate"/>
    </bean>
    <bean class="com.apress.prospringintegration.channels.messagingtemplate.TicketReceiver">
        <property name="messagingTemplate" ref="messagingTemplate"/>
    </bean>
    <bean class="com.apress.prospringintegration.channels.core.TicketGenerator"/>
    <int:channel id="ticketChannel" datatype="com.apress.prospringintegration.channels.core.Ticket">
        <int:priority-queue capacity="50"/>
    </int:channel>
</beans>
